{
  "entities": {
    "Career": {
      "title": "Carrera",
      "description": "Una carrera ofrecida por la institución.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "El nombre completo de la carrera."
        }
      },
      "required": ["name"]
    },
    "User": {
      "title": "User",
      "description": "A user of the application, with roles.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The full name of the user."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "role": {
            "type": "string",
            "enum": ["user", "admin", "super_admin"],
            "description": "The user's role."
        }
      },
      "required": ["name", "email", "role"]
    },
    "Teacher": {
      "title": "Teacher",
      "description": "A teacher in the institution.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The full name of the teacher."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The teacher's email address."
        },
        "contractType": {
            "type": "string",
            "enum": ["Tiempo Completo", "Medio Tiempo", "Por Horas"],
            "description": "The teacher's contract type."
        },
        "maxWeeklyHours": {
          "type": "number",
          "description": "The maximum number of hours the teacher can work in a week."
        },
        "specialties": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "An array of module IDs that the teacher specializes in."
        },
        "availability": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "day": { "type": "string" },
              "startTime": { "type": "string" },
              "endTime": { "type": "string" }
            }
          }
        },
        "status": {
          "type": "string",
          "enum": ["active", "inactive"],
          "description": "The current status of the teacher."
        }
      },
      "required": ["name", "email", "status", "contractType", "maxWeeklyHours"]
    },
    "Group": {
      "title": "Group",
      "description": "A student group for a specific career and semester.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name or identifier of the group (e.g., 'A', 'B')."
        },
        "careerId": {
          "type": "string",
          "description": "A reference to the career this group belongs to."
        },
        "semester": {
          "type": "number",
          "description": "The semester number for this group."
        },
        "studentCount": {
          "type": "number",
          "description": "The number of students in the group."
        }
      },
      "required": ["name", "careerId", "semester", "studentCount"]
    },
    "Module": {
      "title": "Módulo",
      "description": "Un módulo o materia genérica que se puede impartir en la institución.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "El nombre del módulo. E.g., 'Fundamentos de Programación'."
        },
        "description": {
          "type": "string",
          "description": "Una descripción detallada del módulo."
        }
      },
      "required": [ "name" ]
    },
    "Course": {
      "title": "Curso Programado",
      "description": "La instancia de un módulo asignado a un grupo específico, con fechas y horas.",
      "type": "object",
      "properties": {
        "moduleId": {
          "type": "string",
          "description": "ID del módulo genérico que se imparte."
        },
        "groupId": {
          "type": "string",
          "description": "ID del grupo al que se le imparte este curso."
        },
        "durationWeeks": {
          "type": "number",
          "description": "La duración del curso en semanas."
        },
        "totalHours": {
          "type": "number",
          "description": "Las horas totales para este curso."
        },
        "startDate": {
          "type": "string",
          "format": "date",
          "description": "Fecha de inicio del curso."
        },
        "endDate": {
          "type": "string",
          "format": "date",
          "description": "Fecha de finalización del curso."
        }
      },
      "required": [
        "moduleId",
        "groupId",
        "durationWeeks",
        "totalHours",
        "startDate",
        "endDate"
      ]
    },
    "Classroom": {
      "title": "Classroom",
      "description": "A classroom or lab in the institution.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name or number of the classroom."
        },
        "capacity": {
          "type": "number",
          "description": "The maximum capacity of the classroom."
        },
        "type": {
          "type": "string",
          "enum": ["classroom", "lab"]
        }
      },
      "required": ["name", "capacity", "type"]
    },
    "ScheduleEvent": {
      "title": "Schedule Event",
      "description": "An event in the schedule. Spanish: Horario",
      "type": "object",
      "properties": {
        "courseId": { "type": "string" },
        "teacherId": { "type": "string" },
        "classroomId": { "type": "string" },
        "day": { "type": "string" },
        "startTime": { "type": "string" },
        "endTime": { "type": "string" },
        "startWeek": { "type": "number" },
        "endWeek": { "type": "number" }
      },
      "required": ["courseId", "teacherId", "classroomId", "day", "startTime", "endTime", "startWeek", "endWeek"]
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "Stores user profiles and roles."
    },
    "/teachers/{teacherId}": {
      "schema": { "$ref": "#/entities/Teacher" },
      "description": "Stores teacher profiles. Spanish: Docentes"
    },
    "/modules/{moduleId}": {
      "schema": { "$ref": "#/entities/Module" },
      "description": "Almacena los módulos o materias genéricas. Spanish: Módulos"
    },
    "/courses/{courseId}": {
      "schema": { "$ref": "#/entities/Course" },
      "description": "Almacena los cursos programados para grupos específicos. Spanish: Cursos Programados"
    },
    "/classrooms/{classroomId}": {
      "schema": { "$ref": "#/entities/Classroom" },
      "description": "Stores classroom information."
    },
    "/schedules/{scheduleId}": {
      "schema": { "$ref": "#/entities/ScheduleEvent" },
      "description": "Stores individual schedule events. Spanish: Horarios"
    },
    "/careers/{careerId}": {
      "schema": { "$ref": "#/entities/Career" },
      "description": "Stores career information. Spanish: Carreras"
    },
    "/groups/{groupId}": {
      "schema": { "$ref": "#/entities/Group" },
      "description": "Stores student groups."
    }
  }
}
