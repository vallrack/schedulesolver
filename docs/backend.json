{
  "entities": {
    "Career": {
      "title": "Carrera",
      "description": "Una carrera ofrecida por la institución.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "El nombre completo de la carrera."
        }
      },
      "required": ["name"]
    },
    "User": {
      "title": "User",
      "description": "A user of the application, with roles.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The full name of the user."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "role": {
            "type": "string",
            "enum": ["user", "admin", "super_admin"],
            "description": "The user's role."
        }
      },
      "required": ["name", "email", "role"]
    },
    "Teacher": {
      "title": "Teacher",
      "description": "A teacher in the institution.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The full name of the teacher."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The teacher's email address."
        },
        "contractType": {
            "type": "string",
            "enum": ["Tiempo Completo", "Medio Tiempo", "Por Horas"],
            "description": "The teacher's contract type."
        },
        "maxWeeklyHours": {
          "type": "number",
          "description": "The maximum number of hours the teacher can work in a week."
        },
        "specialties": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "An array of module IDs that the teacher specializes in."
        },
        "availability": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "day": { "type": "string" },
              "startTime": { "type": "string" },
              "endTime": { "type": "string" }
            }
          }
        },
        "status": {
          "type": "string",
          "enum": ["active", "inactive"],
          "description": "The current status of the teacher."
        }
      },
      "required": ["name", "email", "status", "contractType"]
    },
    "Subject": {
      "title": "Módulo",
      "description": "Un módulo o materia ofrecida por la institución.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the course. E.g., 'ADS1'."
        },
        "description": {
          "type": "string",
          "description": "A detailed description of the course. E.g., 'ASISTENTE EN DESARROLLO DE SOFTWARE PRIMER SEMESTRE'."
        },
        "durationWeeks": {
          "type": "number",
          "description": "The duration of the course in weeks."
        },
        "totalHours": {
          "type": "number",
          "description": "The total hours for the course."
        },
        "career": {
          "type": "string",
          "description": "The career path this course belongs to."
        },
        "semester": {
          "type": "number",
          "description": "The semester in which the course is offered."
        },
        "group": {
          "type": "string",
          "description": "The student group for this course."
        },
        "startDate": {
          "type": "string",
          "format": "date",
          "description": "The start date of the module."
        },
        "endDate": {
          "type": "string",
          "format": "date",
          "description": "The end date of the module."
        }
      },
      "required": [
        "name",
        "description",
        "durationWeeks",
        "totalHours",
        "career",
        "semester",
        "group",
        "startDate",
        "endDate"
      ]
    },
    "Classroom": {
      "title": "Classroom",
      "description": "A classroom or lab in the institution.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name or number of the classroom."
        },
        "capacity": {
          "type": "number",
          "description": "The maximum capacity of the classroom."
        },
        "type": {
          "type": "string",
          "enum": ["classroom", "lab"]
        }
      },
      "required": ["name", "capacity", "type"]
    },
    "ScheduleEvent": {
      "title": "Schedule Event",
      "description": "An event in the schedule. Spanish: Horario",
      "type": "object",
      "properties": {
        "subjectId": { "type": "string" },
        "teacherId": { "type": "string" },
        "classroomId": { "type": "string" },
        "day": { "type": "string" },
        "startTime": { "type": "string" },
        "endTime": { "type": "string" },
        "startWeek": { "type": "number" },
        "endWeek": { "type": "number" }
      },
      "required": ["subjectId", "teacherId", "classroomId", "day", "startTime", "endTime", "startWeek", "endWeek"]
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "Stores user profiles and roles."
    },
    "/teachers/{teacherId}": {
      "schema": { "$ref": "#/entities/Teacher" },
      "description": "Stores teacher profiles. Spanish: Docentes"
    },
    "/subjects/{subjectId}": {
      "schema": { "$ref": "#/entities/Subject" },
      "description": "Stores course information. Spanish: Módulos/Materias"
    },
    "/classrooms/{classroomId}": {
      "schema": { "$ref": "#/entities/Classroom" },
      "description": "Stores classroom information."
    },
    "/schedules/{scheduleId}": {
      "schema": { "$ref": "#/entities/ScheduleEvent" },
      "description": "Stores individual schedule events. Spanish: Horarios"
    },
    "/careers/{careerId}": {
      "schema": { "$ref": "#/entities/Career" },
      "description": "Stores career information. Spanish: Carreras"
    }
  }
}
