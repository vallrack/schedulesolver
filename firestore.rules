rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- FUNCIONES DE APOYO OPTIMIZADAS ---
    
    function isSignedIn() {
      return request.auth != null;
    }

    // Obtenemos los datos del usuario de forma segura
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // El Super Admin es Dios: Si esta función es true, se salta el resto de validaciones
    function isSuperAdmin() {
      return isSignedIn() && getUserData().role == "super_admin";
    }

    // El Admin estándar tiene permisos elevados pero no totales
    function isAdmin() {
      return isSignedIn() && getUserData().role == "admin";
    }

    // --- LA REGLA MAESTRA ---
    // Si eres Super Admin, tienes acceso total a CUALQUIER documento del sistema
    // sin importar las reglas de abajo.
    match /{document=**} {
      allow read, write, delete: if isSuperAdmin();
    }

    // --- REGLAS PARA OTROS USUARIOS (Admins y Personal) ---

    // Gestión de Usuarios
    match /users/{userId} {
      // Necesario para que el sistema lea el rol al iniciar sesión
      allow read: if isSignedIn() && request.auth.uid == userId;
      // Los Admins pueden ver la lista de usuarios pero no editarlos (eso lo hace Dios)
      allow read: if isAdmin();
    }

    // Colecciones Académicas (Solo para lectura o edición por Admin estándar)
    // Nota: El Super Admin ya tiene permiso por la "Regla Maestra" arriba.
    
    match /teachers/{id} {
      allow read: if isSignedIn();
      allow create, update: if isAdmin();
    }
    
    match /modules/{id} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    match /courses/{id} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    match /schedules/{id} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }
    
    match /classrooms/{id} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }
    
    match /careers/{id} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    match /groups/{id} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }
  }
}
