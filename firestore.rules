rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Función auxiliar para verificar si el usuario está autenticado
    function isSignedIn() {
      return request.auth != null;
    }

    // Función para obtener el rol del usuario actual
    function getRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    // REGLA PARA USUARIOS
    match /users/{userId} {
      // El Super Admin puede crear y editar cualquier usuario (incluyendo otros admins)
      allow write: if isSignedIn() && getRole() == "super_admin";
      // Los usuarios pueden leer su propia info de perfil
      allow read: if isSignedIn() && (request.auth.uid == userId || getRole() == "super_admin" || getRole() == "admin");
    }

    // REGLA PARA HORARIOS Y MATERIAS
    match /horarios/{horarioId} {
      // Solo admins y super_admins pueden crear o modificar horarios
      allow write: if isSignedIn() && (getRole() == "super_admin" || getRole() == "admin");
      // Todo usuario autenticado puede leer los horarios
      allow read: if isSignedIn();
    }

    // REGLA PARA DOCENTES (teachers)
    match /teachers/{teacherId} {
      // Admins y super_admins pueden crear y actualizar.
      allow create, update: if isSignedIn() && (getRole() == "super_admin" || getRole() == "admin");
      // Solo super_admin puede borrar.
      allow delete: if isSignedIn() && getRole() == "super_admin";
      // Todo usuario autenticado puede leer.
      allow read: if isSignedIn();
    }
    
    // REGLA PARA MÓDULOS (courses)
    match /courses/{courseId} {
      // Admins y super_admins pueden crear y actualizar.
      allow create, update: if isSignedIn() && (getRole() == "super_admin" || getRole() == "admin");
      // Solo super_admin puede borrar.
      allow delete: if isSignedIn() && getRole() == "super_admin";
      // Todo usuario autenticado puede leer.
      allow read: if isSignedIn();
    }
    
    // REGLA PARA AULAS (classrooms)
    match /classrooms/{classroomId} {
      // Admins y super_admins pueden escribir.
      allow write: if isSignedIn() && (getRole() == "super_admin" || getRole() == "admin");
      // Todo usuario autenticado puede leer.
      allow read: if isSignedIn();
    }
  }
}
